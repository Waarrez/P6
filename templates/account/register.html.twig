{% extends 'base.html.twig' %}

{% block title "Inscription" %}

{% block body %}

    <div class="container mt-5 text-center col-md-3">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div>
            <h2>Inscription</h2>
        </div>
        <div>
            {{ form_start(registerForm, {'attr': {'class': 'mt-5'}}) }}
            <div class="form-group">
                <label class="mt-3">Nom d'utilisateur :</label>
                {{ form_widget(registerForm.username, {'attr': {'class': 'form-control mt-3'}}) }}
            </div>
            <div class="form-group">
                <label class="mt-3">Adresse Mail :</label>
                {{ form_widget(registerForm.email, {'attr': {'class': 'form-control mt-3'}}) }}
            </div>
            <div class="form-group">
                <label class="mt-3">Mot de passe :</label>
                {{ form_widget(registerForm.password, {'attr': {'class': 'form-control mt-3'}}) }}
            </div>
            <button class="btn btn-primary mt-5 mb-5">S'inscrire</button>
            {{ form_end(registerForm) }}
        </div>
    </div>

{% endblock %}
