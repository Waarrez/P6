{% extends 'base.html.twig' %}

{% block title "Modifier la figure" %}

{% block body %}
    <form action="{{ path('editTrick', {'slug': trick.slug}) }}" method="post" enctype="multipart/form-data">
        {{ form_start(form) }}

        {{ form_widget(form.name, {'attr' : { 'style' : 'display : none;' }}) }}

        <div class="text-center" style="position: relative;">
            <div style="position: absolute; top: 10px; right: 10px;">
                <a style="color: #FFFFFF;" href="">
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512" fill="#FFFFFF">
                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                    </svg>
                </a>
            </div>
            <p style="font-size: 100px; color: white; font-weight: bold; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 1;">{{ trick.name }}</p>
            <img class="trick-main-image" style="width: 100%; height: auto; max-height: 70vh; object-fit: cover;" src="{{ asset('uploads/' ~ trick.images) }}" alt="Trick Image" onerror="this.src='{{ asset('img/default-picture.png') }}'">
        </div>

        <div class="container mt-5">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="container-fluid mt-5">
            <div id="mediaContainer" class="d-none d-md-flex flex-wrap">
                <div class="d-flex flex-column flex-md-row mx-auto" style="gap: 15px;">
                    <div class="d-flex flex-wrap flex-column flex-md-row me-md-3 justify-content-center align-items-center">
                        <div class="d-flex flex-row flex-wrap" style="gap: 15px;">
                           {% if trick.videos|length >= 1 %}
                                {% for video in form.videos %}
                                    <div class="d-flex flex-column align-items-center" style="flex: 1 0 300px;">
                                        <iframe width="300" height="200" src="{{ video.vars.value.url }}" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                        <div class="mt-3 w-100 d-flex align-items-center">
                                            {{ form_widget(video, {'attr': {'class': 'form-control'}}) }}
                                            <a class="delete-video" href="{{ path('deleteVideo', {'id': video.vars.value.id}) }}" data-token="{{ csrf_token('delete' ~ video.vars.value.id) }}">
                                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                                    <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                           {% endif %}

                            {% if trick.videos|length < 1 %}
                                <div class="d-flex flex-column gap-3">
                                    <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                                    {{ form_widget(form.newVideo, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                                </div>
                                {% else %}
                                    {{ form_widget(form.newVideo, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                            {% endif %}

                            {% if trick.videos|length < 2 %}
                                <div class="d-flex flex-column gap-3">
                                    <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                                    {{ form_widget(form.newVideo2, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                                </div>
                                {% else %}
                                    {{ form_widget(form.newVideo2, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                            {% endif %}

                            {% if trick.videos|length < 3 %}
                                <div class="d-flex flex-column gap-3">
                                    <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                                    {{ form_widget(form.newVideo3, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                                </div>
                            {% else %}
                                {{ form_widget(form.newVideo3, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                            {% endif %}
                        </div>
                    </div>
                </div>

                {% if trick.secondaryImages|length > 0 %}
                    {% for image in trick.secondaryImages %}
                        <div class="d-flex flex-column align-items-center" style="flex: 1 0 300px;">
                            <div class="mt-3 w-80 d-flex align-items-center">
                                <div class="col-12 col-md-6 col-lg-4 mb-3 d-flex flex-column align-items-center" style="flex: 1 0 300px;">
                                    <img class="img-fluid" style="height: 200px; object-fit: cover; width: 100%;" src="{{ asset('uploads/tricksImg/tricksImg/300x200-' ~ image.name) }}" alt="Trick Additional Image">
                                    {{ form_widget(form.secondaryImages[loop.index0], {'attr': {'class': 'form-control'}}) }}
                                    <a class="mt-3" href="{{ path('deleteImage', {'id': image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                            <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                {% if trick.secondaryImages|length < 1 %}
                    <div class="d-flex flex-column gap-2">
                        <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                        {{ form_widget(form.newImage, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                    </div>
                {% else %}
                    {{ form_widget(form.newImage, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                {% endif %}

                {% if trick.secondaryImages|length < 2 %}
                    <div class="d-flex flex-column gap-2">
                        <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                        {{ form_widget(form.newImage2, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                    </div>
                {% else %}
                    {{ form_widget(form.newImage2, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                {% endif %}

                {% if trick.secondaryImages|length < 3 %}
                    <div class="d-flex flex-column gap-2">
                        <img width="300" height="200" src="{{ asset('img/newvideo.png') }}" alt="Ajouter une vidéo">
                        {{ form_widget(form.newImage3, {'attr': {'class': 'form-control mt-2', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                    </div>
                {% else %}
                    {{ form_widget(form.newImage3, {'attr': {'style': 'display : none;', 'placeholder': 'Ajouter une nouvelle vidéo'}}) }}
                {% endif %}
            </div>
        </div>

        <div class="container d-flex justify-content-center align-items-center">
            <a class="btn btn-primary d-md-none mt-2" id="showMediaBtn">Voir média</a>
        </div>

        <div class="container text-center mt-5 mb-5 fs-3">
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control w-100'}}) }}
        </div>

        <div class="container text-center mt-5 mb-5 fs-3">
            {{ form_widget(form.content, {'attr': {'cols': '50', 'rows': '2', 'class': 'form-control w-100'}}) }}
        </div>

        <div class="container mt-3 mb-3 d-flex justify-content-center align-items-center">
            {{ form_widget(form.groups, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="container mt-3 mb-3 d-flex justify-content-center align-items-center">
            {{ form_widget(form.images, { 'attr' : {'style' : 'display : none;'} }) }}
        </div>

        <div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
        </div>

        {{ form_end(form) }}
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="module">
        $(document).ready(function() {
            $('#showMediaBtn').on('click', function() {
                let $mediaContainer = $('#mediaContainer');

                if ($mediaContainer.hasClass('d-none')) {
                    $mediaContainer.removeClass('d-none').addClass('d-md-flex');
                    $(this).text('Cacher média');
                } else {
                    $mediaContainer.addClass('d-none').removeClass('d-md-flex');
                    $(this).text('Voir média');
                }
            });

            $("#loadMoreComments").on("click", function() {
                $(".comment.hidden-comment").removeClass("hidden-comment");
                $("#loadMoreContainer").hide();
            });

            // Gestion de la suppression des images
            $("[data-delete]").on('click', function(e) {
                e.preventDefault();

                if (confirm("Êtes-vous sûr de vouloir supprimer l'image ?")) {
                    let $link = $(this);
                    let href = $link.attr("href");
                    let token = $link.data("token");

                    $.ajax({
                        url: href,
                        type: "DELETE",
                        contentType: "application/json",
                        headers: {
                            "X-Requested-With": "XMLHttpRequest"
                        },
                        data: JSON.stringify({ "_token": token }),
                        success: function(data) {
                            console.log('Response data:', data);
                            if (data.success) {
                                $link.parent().remove();
                                window.location.reload();
                            } else {
                                alert(data.error);
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('Error:', error);
                            alert('Une erreur est survenue, veuillez réessayer.');
                        }
                    });
                }
            });

            $(".delete-video").on('click', function(e) {
                e.preventDefault();

                if (confirm("Êtes-vous sûr de vouloir supprimer la vidéo ?")) {
                    let $link = $(this);
                    let href = $link.attr("href");
                    let token = $link.data("token");

                    $.ajax({
                        url: href,
                        type: "DELETE",
                        contentType: "application/json",
                        headers: {
                            "X-Requested-With": "XMLHttpRequest",
                            "X-CSRF-Token": token // Assurez-vous que le token est envoyé ici
                        },
                        data: JSON.stringify({ "_token": token }),
                        success: function(data) {
                            console.log('Response data:', data);
                            if (data.success) {
                                $link.closest('.d-flex').remove();
                                window.location.reload();
                            } else {
                                alert(data.error);
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('Error:', error);
                            alert('Une erreur est survenue, veuillez réessayer.');
                        }
                    });
                }
            });
        });
    </script>

{% endblock %}
