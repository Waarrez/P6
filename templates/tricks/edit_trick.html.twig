{% extends 'base.html.twig' %}

{% block title "Modifier la figure" %}

{% block body %}
    <form action="{{ path('editTrick', {'slug': trick.slug}) }}" method="post" enctype="multipart/form-data">
        {{ form_start(form) }}

        {{ form_widget(form.name, {'attr' : { 'style' : 'display : none;' }}) }}

        <div class="text-center" style="position: relative;">
            <div style="position: absolute; top: 10px; right: 10px;">
                <a style="color: #FFFFFF;" href="">
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512" fill="#FFFFFF">
                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                    </svg>
                </a>
            </div>
            <p style="font-size: 100px; color: white; font-weight: bold; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 1;">{{ trick.name }}</p>
            <img class="trick-main-image" style="width: 100%; height: auto; max-height: 70vh; object-fit: cover;" src="{{ asset('uploads/' ~ trick.images) }}" alt="Trick Image" onerror="this.src='{{ asset('img/default-picture.png') }}'">
        </div>

        <div class="container mt-5">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="d-flex align-items-center justify-content-center">
            <div class="container row mt-5 justify-content-center">
                <div class="col-12 col-md-6 col-lg-4 mb-3 d-flex justify-content-center">
                    <div class="d-flex flex-column align-items-center">
                        <div style="position: relative;">
                            <iframe width="100%" height="250" src="{{ trick.medias }}" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                            {{ form_widget(form.medias, {'attr': {'class': 'form-control mt-5 w-100', 'style': 'position: absolute; bottom: 0;'}}) }}
                        </div>
                    </div>
                </div>
                {% if trick.secondaryImages %}
                    {% for imagesTrick in trick.secondaryImages %}
                        <div class="col-12 col-md-6 col-lg-4 mb-3 d-flex flex-column align-items-center">
                            <img class="trick-image" style="height: 200px;" src="{{ asset('uploads/tricksImg/tricksImg/300x200-' ~ imagesTrick.name) }}" alt="Trick Additional Image">
                            <a href="{{ path('deleteImage', {'id': imagesTrick.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ imagesTrick.id) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                    <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
                                </svg>
                            </a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        <div class="container text-center mt-5 mb-5 fs-3">
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control w-100'}}) }}
        </div>

        <div class="container text-center mt-5 mb-5 fs-3">
            {{ form_widget(form.content, {'attr': {'cols': '50', 'rows': '2', 'class': 'form-control w-100'}}) }}
        </div>

        <div class="container mt-3 mb-3 d-flex justify-content-center align-items-center">
            {{ form_widget(form.groups, {'attr': {'class': 'form-select'}}) }}
        </div>

        {% if trick.secondaryImages|length >= 3 %}
            <div class="container mt-5 mb-3 d-flex justify-content-center align-items-center">
                {{ form_widget(form.images, {'attr': {'style': 'display : none;'}}) }}
            </div>
        {% else %}
            <div class="container mt-5 mb-3 d-flex justify-content-center align-items-center">
                {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}
            </div>
        {% endif %}

        <div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
        </div>

        {{ form_end(form) }}
    </form>

    <script type="module">
        document.addEventListener('DOMContentLoaded', function() {
            let links = document.querySelectorAll("[data-delete]");

            for (let link of links) {
                link.addEventListener('click', function(e) {
                    e.preventDefault();

                    if (confirm("Etes vous sur de vouloir supprimer l'image ?")) {
                        console.log('Sending request to:', link.getAttribute("href"));
                        console.log('Token:', link.dataset.token);

                        fetch(link.getAttribute("href"), {
                            method: "DELETE",
                            headers: {
                                "X-Request-With": "XMLHttpRequest",
                                "Content-Type": "application/json"
                            },
                            body: JSON.stringify({"_token": link.dataset.token})
                        })
                            .then(response => {
                                console.log('Response status:', response.status);
                                return response.json();
                            })
                            .then(data => {
                                console.log('Response data:', data);
                                if (data.success) {
                                    link.parentElement.remove();
                                    window.location.reload();
                                } else {
                                    alert(data.error);
                                }
                            })
                            .catch(error => console.error('Error:', error));
                    }
                });
            }
        });
    </script>

{% endblock %}
